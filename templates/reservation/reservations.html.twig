{% extends 'layout.html.twig' %}

{% block title %}Les Réservations{% endblock %}

{% block content %}

<div class="container-fluid bg-dark p-3">
        
    <div class="heading">
        <h1 class="d-flex justify-content-center fw-bold">Les Réservations</h1>
    </div>
    
     <div class="col-md-10 m-5">

        <table class="table text-center text-light">
            <thead>
                <tr>
                    <th>Utilisateur</th>
                    <th>Espace</th>
                    <th>Date d'arrivée</th>
                    <th>Date de départ</th>
                    <th>Nombre de personnes</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for reservation in reservations %}
                    <tr>
                        <td>{{ reservation.user.nom }}</td>
                        <td>{{ reservation.space.nom }}</td>
                        <td>{{ reservation.dateArrivee | date("d-m-Y") }}</td>
                        <td>{{ reservation.dateDepart | date("d-m-Y") }}</td>
                        <td>{{ reservation.nbPersonnes }}</td>
                        <td>
                            <a href="{{ path('app_uneReservation', {id: reservation.id}) }}"> <i class="fas fa-eye mx-1 text-center" title="voir"></i></a>
                            <a href="{{ path('app_update_uneReservation', {id: reservation.id}) }}"> <i class="fas fa-edit mx-1 text-center text-success" title="editer"></i></a>
                            <a href="{{ path('app_delete_uneReservation', {id: reservation.id} ) }}" onclick=" return confirm('Voulez-vous vraiment supprimer la réservation ?')" > <i class="fas fa-trash mx-1 text-center text-danger" title="supprimer"></i></a>
                        </td>
                    </tr>
                {% endfor %}

            </tbody>

        </table>
    </div>
{% endblock %}