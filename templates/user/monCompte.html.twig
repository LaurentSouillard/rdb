{% extends 'layout.html.twig' %}

{% block title %}Espace membre de {{ user.nom }}{% endblock %}

{% block content %}

<div class="container-fluid bg-dark p-3">
        
    <div class="heading">
        <h1 class="d-flex justify-content-center fw-bold">Bienvenue {{ user.nom }} dans votre espace membre !</h1>
    </div>

    <div class="row d-flex justify-content-center text-center">

            <div class="card m-1" style="width: 36rem;">
                
                <div class="card-body">
                
                    <h5 class="card-title m-5">{{ user.nom }}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Votre email : {{ user.email }}</h6>
            
                    <p class="text-dark fs-6 m-5">Merci d'avoir réservé un espace chez Rue du Boulot</p>
                
            
                </div>
            </div>

    </div>

</div>


{% endblock %}